procedure Fibonacci ()
    local a, b
    a := 0
    b := 1
    repeat
    {
        # write ("a = ", a, "; b = ", b);
        suspend a;
        a :=: b
        b := a + b
    }
    fail;
end

procedure main ()
   local result, i

   result := 0

    every i := Fibonacci() do
        if i >= 4000000 then
            break
        else if i % 2 = 0 then
            result +:= i

    write (result)
end
